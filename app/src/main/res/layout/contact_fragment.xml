<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.contact.contact"
    android:background="@color/background_theme_org">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@android:drawable/screen_background_light_transparent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".03"
            android:fontFamily="@font/aclonica"
            android:padding="@dimen/fab_margin"
            android:text="Follow us on:-"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05">

            <ImageView
                android:id="@+id/imageViewFacebook"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight=".3"
                android:cropToPadding="false"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/imageViewInstagram"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight=".3"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/ic_instagram" />

            <ImageView
                android:id="@+id/imageViewLinkedin"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight=".3"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/ic_linkedin" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:fontFamily="@font/aclonica"
            android:padding="@dimen/fab_margin"
            android:text="Contact us on:-"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".05"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewWhatsapp"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight=".3"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/ic_whatsapp" />

            <ImageView
                android:id="@+id/imageViewWebsite"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight=".3"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/ic_internet" />

            <ImageView
                android:id="@+id/imageViewGmail"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight=".3"
                android:padding="@dimen/fab_margin"
                android:src="@drawable/ic_gmail" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
